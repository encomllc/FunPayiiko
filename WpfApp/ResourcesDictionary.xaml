    <Style x:Key="SimpleButton" TargetType="{x:Type Button}" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        <Setter Setter.Property="FrameworkElement.VerticalAlignment" Setter.Value="Stretch" />
        <Setter Setter.Property="FrameworkElement.HorizontalAlignment" Setter.Value="Stretch" />
        <Setter Setter.Property="FrameworkElement.Margin" Setter.Value="3" />
        <Setter Setter.Property="Control.Template">
            <Setter.Value>
                <ControlTemplate ControlTemplate.TargetType="{x:Type Button}">
                    <Grid Grid.Name="grid">
                        <Border Border.Name="border" Border.CornerRadius="10" Border.Background="{StaticResource MedGrayColor}">
                            <ContentPresenter FrameworkElement.HorizontalAlignment="Center" FrameworkElement.VerticalAlignment="Center" TextElement.FontFamily="{StaticResource MainFontFamily}" TextElement.FontSize="{StaticResource ButtonFontSize}" TextElement.FontWeight="{StaticResource ButtonFontWeight}" TextElement.Foreground="{StaticResource ActiveForegroundColor}" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Trigger.Property="ButtonBase.IsPressed" Trigger.Value="True">
                            <Setter Setter.TargetName="border" Setter.Value="{StaticResource YellowColor}" Setter.Property="Border.Background" />
                        </Trigger>
                        <Trigger Trigger.Property="UIElement.IsEnabled" Trigger.Value="False">
                            <Setter Setter.TargetName="border" Setter.Value="{StaticResource LightGrayColor}" Setter.Property="Border.Background" />
                            <Setter Setter.TargetName="border" Setter.Value="{StaticResource MedGrayColor}" Setter.Property="Border.BorderBrush" />
                            <Setter Setter.TargetName="border" Setter.Property="Border.BorderThickness" Setter.Value="2,2,2,2" />
                            <Setter Setter.Value="{StaticResource InactiveForegroundColor}" Setter.Property="Control.Foreground" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
