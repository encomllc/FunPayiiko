    <Style x:Key="HeaderLabel" TargetType="{x:Type Label}" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        <Setter Setter.Property="FrameworkElement.VerticalAlignment" Setter.Value="Stretch" />
        <Setter Setter.Property="FrameworkElement.HorizontalAlignment" Setter.Value="Stretch" />
        <Setter Setter.Property="Control.Template">
            <Setter.Value>
                <ControlTemplate ControlTemplate.TargetType="{x:Type Label}">
                    <Grid Grid.Name="grid">
                        <Border Border.Name="border" Border.Background="{StaticResource LocalBlackColor}">
                            <ContentPresenter FrameworkElement.HorizontalAlignment="Left" FrameworkElement.VerticalAlignment="Center" TextElement.Foreground="{StaticResource WhiteColor}" TextElement.FontWeight="{StaticResource HeaderFontWeight}" TextElement.FontFamily="{StaticResource MainFontFamily}" TextElement.FontSize="{StaticResource HeaderFontSize}" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
